<div class="columns twelve itenerary-container">
  <div class="row">
    <div class="twelve columns itinerary-header">
      <%= transport_type_img(itinerary.transport_type) %>
      <h3 class="columns subheader"><%= itinerary.name %></h3>
      <div class="one column end">
        <a href="#"><%= image_tag "status-aguardando.png" %></a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="info-address row">
      <div class="four columns">
        <div class="icon-position three">
          <a href="#" class="th"><%= image_tag("avatar.jpg", :class => "avatar") %></a>
          <div class="icon-origin"></div>
        </div>
        <div class="eight columns end">
          <p><%= itinerary.hour %></p>
          <p><%= itinerary.origin %></p>
        </div>
      </div>
      <div class="four columns">
        <div class="icon-position three">
          <a href="#" class="th"><%= image_tag("avatar.jpg", :class => "avatar") %></a>
          <div class="icon-origin"></div>
        </div>
        <div class="eight columns end">
          <p><%= itinerary.hour %></p>
          <p><%= itinerary.origin %></p>
        </div>
      </div>
      <div class="four columns">
        <div class="left"><%= image_tag "icone-calendar.png" %></div>
        <div class="eight columns"><p><strong><%= itinerary.repeat_in_humanize %></strong></p>
        </div>
      </div>
    </div>
    <div class="info-freq row">
      <div class="eight columns">
        <p><strong><%= Itinerary.human_attribute_name(:participants) %></strong></p>
        <%= show_participants(itinerary) %>
      </div>
      <div class="four columns">
        <%= link_to(I18n.t("itinerary.view".to_sym), itinerary, :class => "radius button") %>
        <a href="#" class="radius button"><%= I18n.t("itinerary.similars".to_sym) %></a>
      </div>
    </div>
  </div>
</div>
