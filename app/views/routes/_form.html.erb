<div class="container twelve columns">
  <div class="row">
    <div class="eight columns offset-by-one">
        <div class="seven columns">
          <%= form_for(@route, :builder => RouteFormBuilder, :html => {:class => "custom"}) do |f| %>
            <fieldset  id="add-route">
              <legend><%= "#{I18n.t(:new)} #{Route.model_name.human}" %></legend>
              
                  
                    <%= f.text_field :name, :class => "radius twelve", :placeholder=>"#{Route.human_attribute_name(:name)}" %>
                    <%= f.transport_type_field %>                    
                    <%= f.text_field :origin, :class => "radius twelve", :placeholder=>"#{Route.human_attribute_name(:origin)}" %>
                    <%= f.text_field :destiny, :class => "radius twelve", :placeholder=>"#{Route.human_attribute_name(:destiny)}" %>
                    <p><a href="#">Ver mapa</a></p>
                    <%= f.text_field :day, :class => "radius six columns", :placeholder=>"#{Route.human_attribute_name(:day)}" %>
                    <%= f.text_field :hour, :class => "radius six columns", :placeholder=>"#{Route.human_attribute_name(:hour)}" %>
                    <%= f.repeat_in_field %>
                    <%= f.submit :class=>"radius button six columns", :value=>"Adicionar" %>
                  
            </fieldset>
          <% end %>
        </div>  
    </div>
  </div>
</div>
