body {
  background-color: #E1E1DC!important;
}
h1, h2, h3, h4 {
  margin: 0 0 5px 0!important;
  padding: 0;
}

.container {
  margin: 20px 0;
}
#profile p {
  margin: 0;
  padding: 0;
}
.group {
  margin:  20px 0;
}
.group-info p {
  margin: 0;
  padding: 0;
}
.data {
  margin: 10px 0!important;
}
.row.group-info {
  background-color: #F1F2EB;
  padding: 10px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.info-address {
  border-bottom: 1px solid #ccc;
  padding: 10px 0 0 0;
  margin: 10px 0 0 0;
}
.info-freq {
  padding: 10px 0 0 0;
  margin: 10px 0 0 0;
}
.icon-origin {
  background: image-url("icone-origem.png") no-repeat center center;
  width: 28px;
  height: 32px;
}
.icon-destiny {
  background: image-url("icone-destino.png") no-repeat center center;
  width: 28px;
  height: 32px;
}
.map-marker {
    position: absolute;
    bottom: 0px;
    left: 5px;
}
.description-marker {
  float: left;
  margin: 10px 0 0 0;
}

.icon-position {
    position: relative;
    float: left;
    height: 60px;
    margin: 0 5px 0 0;
}
#search {
  margin-top: 20px;
  margin-bottom: 20px;
}


@mixin transport-type-radio {
  min-width: 45px;
  min-height: 45px;
  display: block;
}
dl.sub-nav.transport {
  margin: 0;
}
.car {
  @include transport-type-radio;
  background: image-url("balao-carro.png") no-repeat;
  &:hover {
    background: image-url("balao-colorido-carro.png") no-repeat;
  }
}

.car.selected {
  background: image-url("balao-colorido-carro.png") no-repeat;
}

.walk{
  @include transport-type-radio;
  background: image-url("balao-ape.png") no-repeat;
  &:hover {
    background: image-url("balao-colorido-ape.png") no-repeat;
  }
}

.walk.selected {
  background: image-url("balao-colorido-ape.png") no-repeat !important;
}

.bike{
  @include transport-type-radio;
  background: image-url("balao-bicicleta.png") no-repeat;
  &:hover {
    background: image-url("balao-colorido-bicicleta.png") no-repeat;
  }
}

.bike.selected {
  background: image-url("balao-colorido-bicicleta.png") no-repeat !important;
}

#add-route, #find-route {
  background: #F1F2EB;
  padding-bottom: 20px;
  margin: 0;
}

.middle {
  margin: 12px 0 0 0 !important;
}

.input_hidden{
  position: absolute;
  left: -999999px;
}

.itinerary-map {
  width: 100%;
  height: 250px;
  img { max-width: none; height: auto }
  margin: 0 0 20px 0;
}

#group-users .left {
  margin: 0 5px 5px 0;
}

#group-title {
  margin: 20px 0 10px 0;
}

#group-transport {
  margin: -30px 0 0 0;
}

.checkbox{
  display: inline;
  margin-top: 0;
}

.avatar{
  width: 35px;
  height: 35px;
}

.itinerary-header{
  display: inline;
}

.itinerary-container{
  margin-top: 5px;
  margin-bottom: 5px;
}
